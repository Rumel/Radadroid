<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="us.rumel.radabite.radadroid.app" >

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/radabite"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="us.rumel.radabite.radadroid.app.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="us.rumel.radabite.radadroid.app.CameraActivity"
            android:label="@string/title_activity_camera" >
        </activity>
        <activity
            android:name="us.rumel.radabite.radadroid.app.ImagePreviewActivity"
            android:label="@string/title_activity_image_preview" >
        </activity>
    </application>

</manifest>
